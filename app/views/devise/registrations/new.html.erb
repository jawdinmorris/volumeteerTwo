<div class = "ui very padded container segment">
<h2>Sign up</h2>


<div class="ui center aligned basic segment">
    <div class="ui blue submit button" onclick="volunteerFunction()">I want to be a volunteer</div>
  <div class="ui horizontal divider">
    Or
  </div>
  <div class="ui blue submit button" onclick="charityFunction()">I need a volunteer</div>
</div>

<div id="volunteerForm" style= "display:none;">
 <h3> Volunteer Sign-Up</h3>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "ui form"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    <div class ="field">
<br />
    <div class="two fields">
  <div class ="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class ="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
</div>
</div>
  <div class ="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>


  <div class ="field">
    <%= f.label :bio %>
    <%= f.text_area :bio, size: "24x6" %>
  </div>
</br>
  <div class ="field">
        <%= f.label :location_information %>
  <div class="two fields">
    <div class ="field">
      <%= f.label :street %>
      <%= f.text_field :street %>
    </div>

  <div class ="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
</div>
</div>
<div class ="fields">
  <div class ="twelve wide field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <div class ="four wide field">
    <%= f.label :postcode %>
    <%= f.text_field :postcode %>
  </div>
</div>
  <div class = "field">
    <%= f.hidden_field :chosen_role, value: "volunteer" %>
  </div>

      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image%>
      </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "ui button" %>
  </div>
  <% end %>
</div>


<div id = "charityForm" style= "display:none;">
  <h3> Charity Sign-Up </h3>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "ui form"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    <div class ="field">
  <br />

    <div class ="field">
      <%= f.label :business_name %>
      <%= f.text_field :business_name %>
    </div>

    <div class ="field">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>


    <div class ="field">
      <%= f.label :bio %>
      <%= f.text_area :bio, size: "24x6" %>
    </div>
</br>
    <div class ="field">
          <%= f.label :location_information %>
    <div class="two fields">
      <div class ="field">
        <%= f.label :street %>
        <%= f.text_field :street %>
      </div>

    <div class ="field">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
  </div>
  </div>
  <div class ="fields">
    <div class ="twelve wide field">
      <%= f.label :country %>
      <%= f.text_field :country %>
    </div>

    <div class ="four wide field">
      <%= f.label :postcode %>
      <%= f.text_field :postcode %>
    </div>
  </div>

    <div class = "field">
      <%= f.hidden_field :chosen_role, value: "charity" %>
    </div>

    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image%>
    </div>

    <div class="actions">
      <%= f.submit "Sign up",  class: "ui button" %>
    </div>
    <% end %>
</div>
</div>
</div>


<script>
    var v = document.getElementById("volunteerForm");
    var c = document.getElementById("charityForm");
function volunteerFunction() {
    if (v.style.display === "none") {
        v.style.display = "block";
        c.style.display = "none";
    }
}
function charityFunction() {
    if (c.style.display === "none") {
        c.style.display = "block";
        v.style.display = "none";
    }
}
</script>
