<div class = "ui very padded container segment">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class => "ui form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>


  <h3> Details </h3>
<% if current_user.has_role? :volunteer %>
<div class ="field">
<br />
<div class="two fields">
<div class ="field">
<%= f.label :first_name %>
<%= f.text_field :first_name %>
</div>

<div class ="field">
<%= f.label :last_name %>
<%= f.text_field :last_name %>
</div>
</div>
</div>
<% elsif current_user.has_role? :charity %>
<div class ="field">
  <%= f.label :business_name %>
  <%= f.text_field :business_name %>
</div>
<%end%>
   <div class ="field">
     <%= f.label :phone %>
     <%= f.text_field :phone %>
   </div>


   <div class ="field">
     <%= f.label :bio %>
     <%= f.text_area :bio, size: "24x6" %>
   </div>
 </br>
   <div class ="field">
         <%= f.label :location_information %>
   <div class="two fields">
     <div class ="field">
       <%= f.label :street %>
       <%= f.text_field :street %>
     </div>

   <div class ="field">
     <%= f.label :city %>
     <%= f.text_field :city %>
   </div>
 </div>
 </div>
 <div class ="fields">
   <div class ="twelve wide field">
     <%= f.label :country %>
     <%= f.text_field :country %>
   </div>

   <div class ="four wide field">
     <%= f.label :postcode %>
     <%= f.text_field :postcode %>
   </div>
 </div>

   <div class="field">
       <%= f.label :image %>
  <% if f.object.image? %>
    <%= image_tag f.object.image.thumb.url %>
  <% end %>
<br>
  <%= f.file_field :image %>
</div>

</br>
  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "ui green button" %>
  </div>
<% end %>

<h3>Unhappy?</h3>

<p> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "ui red button" %></p>

<%= link_to "Back", :back %>
</div>
